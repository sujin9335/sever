package com.test.servlet;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class Hi extends HttpServlet{ //1.
	
	public void doGet(HttpServletRequest req, HttpServletResponse resp) throws IOException, ServletException{//2
		
		//3.
		PrintWriter writer = resp.getWriter();
		
		writer.println("<!DOCTYPE html>\r\n"
				+ "<html>\r\n"
				+ "<head>\r\n"
				+ "<meta charset=\"UTF-8\">\r\n"
				+ "<title>Insert title here</title>\r\n"
				+ "</head>\r\n"
				+ "<body>\r\n"
				+ "	<h1>Hello</h1>\r\n"
				+ "	<p>안녕하세요</p>\r\n"
				+ "	<p id=\"time\"></p>\r\n"
				+ "	\r\n"
				+ "	<script>\r\n"
				+ "		document.getElementByid(\"time\").innerText\r\n"
				+ "			= (new Date()).toLocaleTimeString();\r\n"
				+ "	\r\n"
				+ "	</script>\r\n"
				+ "	\r\n"
				+ "</body>\r\n"
				+ "</html>");
		
		writer.close();
		
	}
	
	

}
